{% for link in links %}
    {% if link.url is defined %}
        <li><a class="dropdown-item" href="{{ link.url }}" target="_blank">{{ link.title }}</a></li>
    {% elseif link.links is defined %}
        <li>
            <button class="dropdown-item submenu-item">{{ link.title }}</button>
            <ul class="dropdown-menu submenu">
                {% include "link-menu.twig" with {"links": link.links} only %}
            </ul>
        </li>
    {% elseif link.separator is defined %}
        <li class="dropdown-divider"></li>
    {% endif %}
{% endfor %}