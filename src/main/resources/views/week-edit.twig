{% extends "page.twig" %}

{% block title %}{{ tr("week-page.title", startDate.formatForDisplay, endDate.formatForDisplay) }}{% endblock %}

{% block navbar %}
    <div class="row ms-auto me-auto" id="week-date-container">
        <div class="col-auto mx-auto d-flex">
            <div id="week-current-date-container" class="align-self-center">
                <span class="align-middle bold" id="week-current-date">{{ startDate.formatForDisplay }} - {{ endDate.formatForDisplay }}</span>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="container">
        <table class="table table-striped" id="week-table" data-space-id="{{ currentSpace.id }}" data-date="{{ startDate.formatForKey }}">
            <thead>
                <tr>
                    <th></th>

                    {% for type in mealTypes %}
                        <th class="week-meal-type">{{ type }}</th>
                    {% endfor %}
                </tr>
            </thead>

            <tbody>
                {% for day in days %}
                    <tr class="week-day-row" data-date="{{ day.date.formatForKey }}">
                        <th class="week-day">
                            {{ day.title }}
                            <div class="week-day-date text-muted">{{ day.date.formatForDisplay }}</div>
                        </th>

                        {% for typeId, _ in mealTypes %}
                            <td class="text-center" data-type="{{ typeId }}">
                                <div class="week-edit-meal-container">
                                    {% for meal in day.meals[typeId] %}
                                        {% include "week-edit-meal.twig" with {
                                            "id": meal.id,
                                            "text": meal.text,
                                            "date": meal.date.formatForKey,
                                            "url": meal.url,
                                            "type": meal.type.id,
                                            "notificationTime": meal.notification.time.format("c"),
                                            "notificationText": meal.notification.text,
                                            "useState": true
                                        } only %}
                                    {% endfor %}
                                </div>

                                <button type="button" class="btn btn-primary btn-sm week-edit-meal-add" title="{{ tr("edit.add-meal") }}"><i class="fa fa-plus"></i></button>
                            </td>
                        {% endfor %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="floating-button-container">
        <button class="btn btn-success floating-button" id="week-edit-save-button" title="{{ tr("edit.save") }}"><i class="fa fa-check"></i></button>
        <a href="/space/{{ currentSpace.id }}/week/{{ startDate.formatForUrl }}" class="btn btn-danger floating-button" title="{{ tr("edit.cancel") }}"><i class="fa fa-xmark"></i></a>
    </div>

    {% embed "modal.twig" with {"id": "week-edit-url-modal", "title": tr("edit.link.title")} only %}
        {% block body %}
            <p>{{ tr("edit.link.modal-text") }}</p>

            <div class="form-floating">
                <input type="url" class="form-control" id="week-edit-url-input" placeholder="{{ tr("edit.link.label") }}"/>
                <label for="week-edit-url-input" class="form-label">{{ tr("edit.link.label") }}</label>
            </div>
        {% endblock %}
    {% endembed %}

    {% embed "modal.twig" with {"id": "week-edit-notification-modal", "title": tr("edit.notification.title")} only %}
        {% block body %}
            <p>{{ tr("edit.notification.modal-text") }}</p>

            <div class="input-group mb-3">
                <div class="input-group-text">
                    <input class="form-check-input" type="checkbox" id="week-edit-notification-enable"/>
                </div>
                <input type="datetime-local" class="form-control" id="week-edit-notification-time"/>
                <div class="invalid-feedback" id="week-edit-notification-invalid">
                    {{ tr("edit.notification.invalid") }}
                </div>
            </div>

            <div class="form-floating">
                <input type="text" class="form-control" id="week-edit-notification-text" placeholder="{{ tr("edit.notification.text-description") }}"/>
                <label for="week-edit-notification-text">{{ tr("edit.notification.text-description") }}</label>
            </div>
        {% endblock %}
    {% endembed %}

    <div class="toast-container">
        <div id="week-edit-error-toast" class="toast" role="alert">
            <div class="toast-header text-bg-danger">
                <strong class="me-auto">{{ tr("error-toast.title") }}</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body"></div>
        </div>
    </div>

    <datalist id="existing-meals">
        {% for meal in existingMeals %}
            <option value="{{ meal.text }}" data-url="{{ meal.url }}"></option>
        {% endfor %}
    </datalist>

    <script type="x-tmpl-mustache" id="week-edit-meal-template">
        {% include "week-edit-meal.twig" with {
            "id": "{{ id }}",
            "text": "{{ text }}",
            "date": "{{ date }}",
            "url": "{{ url }}",
            "type": "{{ type }}",
            "notificationTime": "{{ notificationTime }}",
            "notificationText": "{{ notificationText }}"
        } only %}
    </script>
{% endblock %}