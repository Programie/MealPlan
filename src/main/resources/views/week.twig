{% set assetEntryPoint = "week" %}
{% set translations = ["meal.notification.tooltip"] %}

{% extends "page.twig" %}

{% block title %}{% trans with {"%startDate%": startDate.formatForDisplay, "%endDate%": endDate.formatForDisplay} %}week-page.title{% endtrans %}{% endblock %}

{% block navbar %}
    <div class="row ms-auto me-auto" id="week-date-container">
        <div class="col-auto"><a href="/space/{{ currentSpace.id }}/week/{{ previousWeek.formatForUrl }}" class="btn btn-primary px-3" title="{% trans %}goto-week.previous{% endtrans %}"><i class="fa-solid fa-caret-left"></i></a></div>
        <div class="col-auto mx-auto d-flex">
            <div id="week-current-date-container" class="align-self-center" role="button">
                <span class="align-middle bold" id="week-current-date">{{ startDate.formatForDisplay }} - {{ endDate.formatForDisplay }}</span>
                <a href="/space/{{ currentSpace.id }}/week/{{ nowWeek.formatForUrl }}" class="btn btn-primary" title="{% trans %}goto-week.current{% endtrans %}"><i class="fa fa-calendar-week"></i></a>
                <input type="date" id="week-date-selection"/>
            </div>
        </div>
        <div class="col-auto"><a href="/space/{{ currentSpace.id }}/week/{{ nextWeek.formatForUrl }}" class="btn btn-primary px-3" title="{% trans %}goto-week.next{% endtrans %}"><i class="fa-solid fa-caret-right"></i></a></div>
    </div>
{% endblock %}

{% block content %}
    <div class="container">
        <table class="table table-striped" id="week-table">
            <thead>
                <tr>
                    <th></th>

                    {% for mealType in mealTypes %}
                        <th class="week-meal-type">{{ mealType.name }}</th>
                    {% endfor %}
                </tr>
            </thead>

            <tbody>
                {% for day in days %}
                    <tr class="week-day-row" data-date="{{ day.date.formatForKey }}">
                        <th class="week-day">
                            {{ day.title }}
                            <div class="week-day-date text-muted">{{ day.date.formatForDisplay }}</div>
                        </th>

                        {% for mealType in mealTypes %}
                            <td>
                                {% for meal in day.meals[mealType.id]|default([]) %}
                                    <div data-meal-id="{{ meal.id }}">
                                        {% if meal.notification %}
                                            <i class="fa fa-bell meal-notification me-1" data-time="{{ meal.notification.time.formatForJs }}" data-text="{{ meal.notification.text }}"></i>
                                        {% endif %}

                                        {% if meal.url %}
                                            <a href="{{ meal.url }}" target="_blank" class="icon-link icon-link-hover">{{ meal.text }}</a>
                                        {% else %}
                                            {{ meal.text }}
                                        {% endif %}
                                    </div>
                                {% endfor %}
                            </td>
                        {% endfor %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="floating-button-container">
        <a href="/space/{{ currentSpace.id }}/week/{{ startDate.formatForUrl }}/edit" class="btn btn-primary floating-button"><i class="fa fa-pencil"></i></a>
    </div>
{% endblock %}